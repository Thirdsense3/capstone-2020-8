    <!--            android:layout_below="@id/current"-->
    <!--            android:text="다음 역 : "-->
    <!--            android:textColor="#FFFFFF"-->
    <!--            android:textSize="40dp"-->
    <!--            android:textStyle="bold"-->
    <!--            />-->
